<div class="container">

  <h1 class="title-index-bottles">Bottles to Discover</h1>
    <div class="searchbar">
        <%= form_tag bottles_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find The Perfect Bottle"
        %>
      <br>
      <%= submit_tag "Search", class: "btn btn-searchbar" %>
      <% end %>
    </div>
  <br>
  <div class="card-container cards">
    <% @bottles.each do |bottle|  %>
      <%= link_to bottle_path(bottle), style: 'text-decoration: none' do %>
        <div class="card-bottle">
          <% if bottle.photo.attached? %>
            <%= cl_image_tag bottle.photo.key, height: 300, width: 400, crop: :fill %>
          <% else  %>
            <img src="#" alt="">
          <% end %>
          <div class="card-bottle-infos">
            <div>
              <h2><%= bottle.appellation %></h2>
              <p class="bottle-domain"><%= bottle.domain %></p>
            </div>
            <h2 class="card-bottle-price_range"><%= bottle.price_range %></h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="container-filters">
    <form>
      <div class="color-filter">
        <p>Color</p>
        <input type="text" name="color" value="<%= params[:color] %>">
      </div>
      <br>
      <div>
        <p>Grape Variety</p>
        <input type="text" name="grape_variety" value="<%= params[:grape_variety] %>">
      </div>
      <br>
      <div>
        <p>Aroma</p>
        <input type="text" name="aroma" value="<%= params[:aroma] %>">
      </div>
      <br>
      <div>
        <p>Characteristics</p>
        <input type="text" name="characteristics" value="<%= params[:characteristics] %>">
      </div>
      <br>
      <div>
        <p>Country</p>
        <input type="text" name="country" value="<%= params[:country] %>">
      </div>
      <br>
      <div>
        <p>Region</p>
        <input type="text" name="region" value="<%= params[:region] %>">
      </div>
      <br>
      <div>
        <p>Vintage</p>
        <input type="text" name="vintage" value="<%= params[:vintage] %>">
      </div>
      <br>
      <div>
        <p>Typical Meal</p>
        <input type="text" name="typical_meal" value="<%= params[:typical_meal] %>">
      </div>
      <br>
      <div>
        <p>Price Range</p>
        <input type="text" name="price_range" value="<%= params[:price_range] %>">
      </div>
      <br>
      <div>
        <input type="submit">
      </div>
    </form>
  </div>
</div>
