                      <% dependent = 'meals_list' %>
                    <% elsif reason == 'Complete my cellar' %>
                      <% dependent = 'cellar_worlds' %>
                    <% elsif reason == 'Impress your friends' %>
                      <% dependent = 'submit-button' %>
                    <% end %>
